      },
      {
         "label": "View slides (presentation mode)",
         "type": "shell",
         "command": "start http://localhost:8000/",
         "problemMatcher": []
      },
      {
         "label": "View presentation (PDF mode)",
         "type": "shell",
         "command": "start http://localhost:8000/?print-pdf",
         "problemMatcher": []
      }
   ]
}