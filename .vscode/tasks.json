{
   "version": "2.0.0",
   "tasks": [
      {
         "label": "Install dependencies",
         "type": "shell",
         "command": "npm install",
         "options": {
            "env": {
               "PUPPETEER_SKIP_DOWNLOAD": "1"
            }
         },
         "problemMatcher": []
      },
      {
         "label": "Run local web server",
         "type": "shell",
